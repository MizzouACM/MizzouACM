.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %button.btn.btn-navbar{:"data-toggle"=>"collapse", :"data-target"=>".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to 'Mizzou ACM', root_path, :class=>"brand"
      .nav-collapse.collapse
        %ul.nav
          =nav_link 'Events', events_path
          =nav_link 'Members', users_path
          =nav_link 'Groups', groups_path
          =nav_link 'Projects', projects_path
          =nav_link 'Facebook', 'https://www.facebook.com/groups/MizzouACM/?fref=ts'
        .pull-right
          %ul.nav
            - if user_signed_in?
              %li
                = link_to current_user, {:style=> 'padding: 0px;'} do
                  %img{:src=>current_user.gravatar_url, :id=>'nav-gravatar'}
              %li.dropdown
                %a.dropdown-toggle{:href=>"#", :"data-toggle"=>"dropdown"}
                  =current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "My Profile", current_user
                  - if user_is_admin?
                    %li=link_to 'New Post', new_post_path
                  %li.divider
                  %li= link_to 'Logout', signout_path
            - else
              = link_to 'Sign in with GitHub', signin_path, :class=>"btn btn-teal"